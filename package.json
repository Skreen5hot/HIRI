{
  "name": "hiri-protocol",
  "version": "0.1.0",
  "description": "HIRI (Hash-IRI) Protocol - A protocol-agnostic, local-first, verifiable knowledge and claim foundation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit",
    "check:edge-canonical": "node scripts/check-edge-canonical.js",
    "clean": "node scripts/clean.js"
  },
  "keywords": [
    "hiri",
    "hash-iri",
    "verifiable",
    "decentralized",
    "json-ld",
    "local-first",
    "edge-canonical",
    "cryptography"
  ],
  "author": "Aaron Damiano",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Skreen5hot/HIRI.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "@vitest/browser": "^4.0.18",
    "playwright": "^1.50.0"
  }
}
